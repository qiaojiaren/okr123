
.chat-container {
  width: 95%;
  height: 80vh;
  border: 1px solid #ccc;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  padding: 5px;
}
.messages {
  width: 95%;
  flex: 1;
  overflow-y: auto;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-bottom: 10px;
}
.message {
  display: flex;
  align-items: flex-start;
  margin: 5px 0;
}
.user-message {
  justify-content: flex-end;
  text-align: left;
}
.bot-message {
  justify-content: flex-start;
}
.send-button {
  width: 50px; /* 设置按钮宽度 */
  height: 40px; /* 设置按钮高度 */
  display: flex; /* 使用 flex 布局 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  font-size: 12px; /* 设置字体大小 */
  background-color: #007bff; /* 按钮背景色 */
  color: white; /* 按钮字体颜色 */
  border: none; /* 去掉边框 */
  border-radius: 5px; /* 设置圆角 */
}
.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-left: 10px;
}
.avatarBot {
  margin-right: 10px;
}
.text {
  max-width: 70%;
  padding: 10px;
  border-radius: 5px;
  word-wrap: break-word;
  overflow-wrap: break-word;
  text-align: left;
}
.user-message .text {
  background-color: #dcf8c6;
  text-align: right;
}
.bot-message .text {
  background-color: #f1f0f0;
}
.input-container {
  display: flex;
}
input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}
button {
  margin-left: 10px;
  padding: 10px;
  border: none;
  background-color: #007bff;
  color: white;
  border-radius: 5px;
  cursor: pointer;
}
