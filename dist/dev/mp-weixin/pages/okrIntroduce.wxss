}
.my-box {
  width: 50vw;
  height: 50vw;
  position: absolute;
  top: calc(50% - 25vw);
  left: calc(50% - 25vw);
  /*3D旋转*/
  transform-style: preserve-3d;
  transform-origin: 50% 50% 100px;
  Animation: myrotate 15s ease-in-out infinite;
  -webkit-user-select: none;
     -moz-user-select: none;
          user-select: none;
  cursor: move;
}
.my-animation {
  animation-play-state: paused;
}
.no-animation {
  animation: none;
}
.my-box::after {
  position: relative;
}
.box {
  width: 100%;
  height: 100%;
  position: absolute;
  font-size: 5vw;
  display: flex;
  justify-content: center;
  align-items: center;
  align-content: center;
}
