page {
  height: 100%;
}
.viewport {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 20rpx 40rpx;
}
.logo {
  flex: 1;
  text-align: center;
}
.logo image {
  width: 40vw;
  height: 40vw;
  margin-top: 15vh;
}
.login {
  display: flex;
  flex-direction: column;
  height: 60vh;
  padding: 40rpx 20rpx 20rpx;
}
.login .button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  border-radius: 72rpx;
  color: #fff;
}
.login .phone {
  background-color: #3694f3;
}
.login .extra {
  flex: 1;
  padding: 70rpx 20rpx 0;
}
.login .extra .caption {
  width: 80vw;
  line-height: 1;
  border-top: 1rpx solid #ddd;
  font-size: 26rpx;
  color: #999;
  position: relative;
}
.login .extra .caption text {
  transform: translate(-50%);
  background-color: #fff;
  position: absolute;
  top: -12rpx;
  left: 50%;
}
.tips {
  position: absolute;
  bottom: 80rpx;
  left: 20rpx;
  right: 20rpx;
  font-size: 22rpx;
  color: #999;
  text-align: center;
}